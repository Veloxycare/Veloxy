---
import * as data from "../data/features.md";
const featureData = data.frontmatter;
---

<div class="relative container flex flex-col lg:flex-row justify-between pt-6 lg:pt-0 mx-auto mb-10 bg-overlay bg-primary rounded-3xl">
  <div class="w-full lg:w-1/2 flex items-center justify-center">
    <img class="w-[300px] lg:w-[365px] mx-auto" src={featureData?.image} alt="" />
  </div>

  <div class="w-full lg:w-1/2 py-6 mx-auto pl-10 lg:pl-10 pr-10 lg:pr-24 ">
    <h2 class="text-3xl lg:text-5xl text-white text-center lg:text-left font-extrabold mb-4">{featureData?.title}</h2>
    <p class="text-white text-center lg:text-left text-wrap mb-4 mx-auto">{featureData?.description}</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 gap-8">
      {featureData.features.map((data: any) => (
        <div class="flex flex-col lg:flex-row items-center  justify-center  space-x-4">
          <div class="flex items-center justify-center w-16 h-16 bg-yellow-500 p-6 rounded-full">
            <i class={`${data?.icon} text-2xl text-white`}></i>
          </div>
          <div class="text-wrap text-center lg:text-left">
            <h3 class="text-xl text-white font-bold mb-2">{data?.title}</h3>
            <p class="text-white">{data?.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
